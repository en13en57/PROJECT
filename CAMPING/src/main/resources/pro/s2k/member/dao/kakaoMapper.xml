<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.s2k.camp.dao.KakaoDAO">

	<!-- 정보 찾기 -->
	<select id="findKakao" parameterType="hashmap" resultType="KakaoVO">
		select * from sns_kakao where k_nick=#{nickname} and k_email=#{email}
	</select>

	<!-- 정보 저장 -->
	<insert id="kakaoInsert" parameterType="hashmap">
		insert into sns_kakao(k_nick, k_email)
			values(#{nickname}, #{email})
	</insert>
</mapper>